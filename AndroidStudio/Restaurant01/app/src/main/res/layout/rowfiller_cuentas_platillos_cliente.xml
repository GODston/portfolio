<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#494848"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="2dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rowfiller_clntcuentas_img_plat"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/restaurantelogoplatilloooo"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rowfiller_clntcuentas_Titulo_plat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="10dp"
                android:gravity="right"
                android:id="@+id/rowfiller_clntcuentas_identificadortxt"></TextView>

            <TextView
                android:id="@+id/rowfiller_clntcuentas_Descripcion_plat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:textSize="14dp"
                android:textStyle="italic"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentarios:"
                android:textStyle="bold"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/rowfiller_clntcuentas_Comentarios_plat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentarios"></TextView>

            <TextView
                android:id="@+id/rowfiller_clntcuentas_Cantidad_plat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Cantidad: ##"></TextView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quitar Pedido"
                android:id="@+id/rowfiller_clntcuentas_btn_quitar"></Button>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-----------------------------------------------------------------------"
        android:textSize="15dp"
        android:gravity="center"></TextView>

</androidx.appcompat.widget.LinearLayoutCompat>
