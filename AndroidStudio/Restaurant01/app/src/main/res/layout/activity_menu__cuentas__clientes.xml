<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8080"
    tools:context=".Menu_Cuentas_Clientes">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:background="#781E1E"
        android:contentDescription="@string/Imagenes"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_total_Client"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/aaa" />

    <TextView
        android:id="@+id/txt_total_Client"
        android:layout_width="146dp"
        android:layout_height="43dp"
        android:gravity="right|center_vertical"
        android:text="$###.###"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="424dp"
        android:layout_height="73dp"
        android:background="#781E1E"
        android:contentDescription="@string/Imagenes"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/aaa" />

    <TextView
        android:id="@+id/txt_Estatus_Clientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estatus: ####"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <Button
        android:id="@+id/btn_Sig_Client_Cuenta"
        android:layout_width="220dp"
        android:layout_height="61dp"
        android:onClick="Siguiente"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_Clientes_Cuentas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Clientes_Cuentas"
        android:layout_width="334dp"
        android:layout_height="367dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Tiempo_Cliente_Menu" />

    <TextView
        android:id="@+id/txt_Tiempo_Cliente_Menu"
        android:layout_width="338dp"
        android:layout_height="24dp"
        android:text="Tiempo de Espera ##:##"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

</androidx.constraintlayout.widget.ConstraintLayout>